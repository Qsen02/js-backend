<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">
        <!-- If there are posts for creature in the database display each of them -->
        {{#if hasMovies}}
        {{#each movieshdb}}
        <div class="flip flip-vertical">
            <div class="front">
                <img src="{{imageURLhdb}}" alt="Jungle-Cruise">
            </div>
            <div class="back">
                <h1>{{titlehdb}}</h1>
                <h2>Genre: {{genrehdb}}</h2>
                <p>Description: {{descriptionhdb}}</p>
                <a href="/details/{{id}}" class="details">Details</a>
            </div>
        </div>
        {{/each}}
        {{else}}
        <!-- If there are still no posts in the database display: -->
        <div class="no-posts">
            <p class="no-offer">There are no posts yet...</p>
        </div>
        {{/if}}
    </div>
</section>