<section id="editPage">
    <form id='editForm'  method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{fields.name}}">

        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="{{fields.type}}">

        <label for="production">Year of Production:</label>
        <input type="number" id="production" name="production" value="{{fields.production}}">

        <label for="exploitation">Years of Exploitation:</label>
        <input type="number" id="exploitation" name="exploitation" value="{{fields.exploitation}}">

        <label for="damages">Damages:</label>
        <input type="text" id="damages" name="damages"
            value="{{fields.damages}}">

        <label for="image">Image:</label>
        <input type="text" id="image" name="image"
            value="{{fields.image}}">

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{fields.price}}">

        <label for="description">Description:</label>
        <input type="text" id="description" name="description"
            value="{{fields.description}}">

        <input type="submit" class="edit" value="Edit Offer">
    </form>
</section>