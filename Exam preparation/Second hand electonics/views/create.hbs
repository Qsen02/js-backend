<section id="createPage">
    <form id='createForm' method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Name..." {{#if fields.name}}value="{{fields.name}}"{{/if}}>

        <label for="type">Type:</label>
        <input type="text" id="type" name="type" placeholder="Type..." {{#if fields.type}}value="{{fields.type}}"{{/if}}>

        <label for="production">Year of Production:</label>
        <input type="number" id="production" name="production" placeholder="Year of Production..." {{#if fields.production}}value="{{fields.production}}"{{/if}}>

        <label for="exploitation">Years of Exploitation:</label>
        <input type="number" id="exploitation" name="exploitation" placeholder="Year of Exploitation..." {{#if fields.exploitation}}value="{{fields.exploitation}}"{{/if}}>

        <label for="damages">Damages:</label>
        <input type="text" id="damages" name="damages" placeholder="Damages..." {{#if fields.damages}}value="{{fields.damages}}"{{/if}}>

        <label for="image">Image:</label>
        <input type="text" id="image" name="image" placeholder="Image..." {{#if fields.image}}value="{{fields.image}}"{{/if}}>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" placeholder="Price..." {{#if fields.price}}value="{{fields.price}}"{{/if}}>

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" placeholder="Description..." {{#if fields.description}}value="{{fields.description}}"{{/if}}>

        <input type="submit" class="create" value="Create Offer">
    </form>
</section>