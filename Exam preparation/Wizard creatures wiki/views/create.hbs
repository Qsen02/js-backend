<section id="create-page">
    <div class="createSection">
        <div class="info">
            <h2>"Dobby Never Meant To Kill! Dobby Only Meant to Maim, or Seriously Injure."</h2>
        </div>

        <form  method="post" class="createForm">
            <h2>Create Post</h2>
            <ul class="noBullet">
                <li>
                    <label for="title">Name:</label>
                    <input type="text" class="inputFields" id="name" placeholder="Delphini" name="name" {{#if fields.name}}value="{{fields.name}}"{{/if}} />
                </li>
                <li>
                    <label for="key-word">Species:</label>
                    <input type="text" class="inputFields" id="species" placeholder="Human" name="species" {{#if fields.species}}value="{{fields.species}}"{{/if}} />
                </li>
                <li>
                    <label for="skin">Skin Colour:</label>
                    <input type="text" class="inputFields" id="skin" placeholder="Black" name="skinColor" {{#if fields.skinColor}}value="{{fields.skinColor}}"{{/if}} />
                </li>
                <li>
                    <label for="date">Eye Colour:</label>
                    <input type="text" class="inputFields" id="eye" placeholder="Black" name="eyeColor" {{#if fields.eyeColor}}value="{{fields.eyeColor}}"{{/if}} />
                </li>
                <li>
                    <label for="image">Creature Image:</label>
                    <input type="text" class="inputFields" id="image" placeholder="http:/..." name="image" {{#if fields.image}}value="{{fields.image}}"{{/if}} />
                </li>
                <li>
                    <label for="description">Description:</label>
                    <textarea id="description" class="inputFields" name="description" placeholder="Creature...">{{#if fields.description}}{{fields.description}}{{/if}}</textarea>
                </li>
                <li id="center-btn">
                    <button type="submit" id="create-btn">Create</button>
                </li>
            </ul>
        </form>

    </div>
</section>