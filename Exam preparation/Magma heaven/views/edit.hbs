{{#if errors}}
<div>
    <div class="errorContainer">
        {{#each errors}}
        <p>{{this}}</p>
        {{/each}}
    </div>
</div>
{{/if}}

<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form method="post" name="edit-form">
            <label>Name:</label>
            <input type="text" id="name" name="name" placeholder="..." value="{{fields.name}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" placeholder="..." value="{{fields.location}}">
            <label>Elevation:</label>
            <input type="number" id="elevations" name="elevation" placeholder="..." value="{{fields.elevation}}">
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="lastEruption" placeholder="..."
                value="{{fields.lastEruption}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{fields.image}}">
            <label>Volcano Type:</label>
            <select id="type" name="typeVolcano">
                <option value="{{fields.typeVolcano}}" selected>{{fields.typeVolcano}}</option>
                <option value="Supervolcanoes">Supervolcanoes</option>
                <option value="Submarine">Submarine</option>
                <option value="Subglacial">Subglacial</option>
                <option value="Mud">Mud</option>
                <option value="Stratovolcanoes">Stratovolcanoes</option>
                <option value="Shield">Shield</option>
            </select>
            <label>Description:</label>
            <textarea id="description" name="description"
                placeholder="...">{{fields.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>