{{#if errors}}
<div>
    <div class="errorContainer">
        {{#each errors}}
        <p>{{this}}</p>
        {{/each}}
    </div>
</div>
{{/if}}

<div class="register-box">
    <h1>Register</h1>
    <form  method="post">
        <label>Username</label>
        <input type="text" name="username" placeholder="Username.." {{#if fields.username}}value="{{fields.username}}"{{/if}}>
        <label>Email</label>
        <input type="text" name="email" placeholder="Email.." {{#if fields.email}}value="{{fields.email}}"{{/if}}>
        <label>Password</label>
        <input type="password" name="password" placeholder="Password..">
        <label>Confirm Password</label>
        <input type="password" name="repass" placeholder="Confirm Password..">
        <input type="submit" value="Submit">
    </form>
    <p>Already have an account? <a href="/login">Login here</a></p>
</div>