<main class="create">
    <section id="create">
        <div class="form">
            <h2>Add item</h2>
            <form class="create-form" method="post">
                <input type="text" name="name" id="name" placeholder="Name" {{#if fields.name}}value="{{fields.name}}"{{/if}}/>
                <input type="text" name="years" id="years" placeholder="Years" {{#if fields.years}}value="{{fields.years}}"{{/if}}/>
                <input type="text" name="kind" id="kind" placeholder="Kind" {{#if fields.kind}}value="{{fields.kind}}"{{/if}}/>
                <input type="text" name="image" id="animal-img" placeholder="Image url" {{#if fields.image}}value="{{fields.image}}"{{/if}}/>
                <input type="text" name="need" id="needs-of" placeholder="Needs of" {{#if fields.need}}value="{{fields.need}}"{{/if}}/>
                <input type="text" name="location" id="location" placeholder="Location" {{#if fields.location}}value="{{fields.location}}"{{/if}}/>
                <textarea id="description" placeholder="Description..." name="description">{{#if fields.description}}{{fields.description}}{{/if}}</textarea>

                <button type="submit">Post</button>
            </form>
        </div>
    </section>
</main>