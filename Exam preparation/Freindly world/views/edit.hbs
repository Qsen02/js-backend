<main class="edit">
    <section id="create">
        <div class="form">
            <h2>Edit item</h2>
            <form class="create-form" method="post">
                <input type="text" name="name" id="name" placeholder="Name" value="{{fields.name}}" />
                <input type="text" name="years" id="years" placeholder="Years" value="{{fields.years}}" />
                <input type="text" name="kind" id="kind" placeholder="Kind" value="{{fields.kind}}" />
                <input type="text" name="image" id="animal-img" placeholder="Image url" value="{{fields.image}}" />
                <input type="text" name="need" id="needs-of" placeholder="Needs of" value="{{fields.need}}" />
                <input type="text" name="location" id="location" placeholder="Location" value="{{fields.location}}" />
                <textarea id="description" placeholder="Description..." name="description">{{fields.description}}"</textarea>

                <button type="submit">Edit</button>
            </form>
        </div>
    </section>
</main>