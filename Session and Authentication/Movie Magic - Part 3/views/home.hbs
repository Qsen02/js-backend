<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">
        <!-- If there are posts for creature in the database display each of them -->
        {{#if hasMovies}}
        {{#each movies}}
        <div class="flip flip-vertical">
            <div class="front">
                <img src="{{imageURL}}" alt="Jungle-Cruise">
            </div>
            <div class="back">
                <h1>{{title}}</h1>
                <h2>Genre: {{genre}}</h2>
                <p>Description: {{description}}</p>
                <a href="/details/{{_id}}" class="details">Details</a>
                {{#if userDataId}}
                <a href="/movies/{{_id}}/attach" class="details">Attach</a>
                {{/if}}
            </div>
        </div>
        {{/each}}
        {{else}}
        <!-- If there are still no posts in the database display: -->
        <div class="no-posts">
            <p class="no-offer">There are no posts yet...</p>
        </div>
        {{/if}}
    </div>
</section>