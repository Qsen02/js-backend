{{#if errors}}
<div class="notification">
    <p>Name, description and breeds required!</p>
</div>
{{/if}}
<form action="/cats/add-cat" method="post" class="cat-form" enctype="multipart/form-data">
    <h2>Add Cat</h2>
    <label {{#if errors.name}}class="errorLabel"{{/if}} for="name">Name</label>
    <input {{#if errors.name}}class="errorField"{{/if}} name="name" type="text" id="name" value="{{cats.name}}">
    <label {{#if errors.description}}class="errorLabel"{{/if}} for="description">Description</label>
    <textarea {{#if errors.description}}class="errorField"{{/if}} name="description" id="description">{{cats.description}}</textarea>
    <label for="image">Image</label>
    <input name="imgURL" type="file" id="image">
    <label {{#if errors.breed}}class="errorLabel"{{/if}} for="group">Breed</label>
    <select  {{#if errors.breed}}class="errorField"{{/if}} name="breed" id="group" value="{{cats.breed}}">
       <option value="" selected></option>
       {{> breeds}}
    </select>
    <button type="submit">Add Cat</button>
</form>