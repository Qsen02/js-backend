{{#if error}}
<div class="error-container">
    <p>Select one of the casts!</p>
</div>
{{/if}}
<section id="attachCast">
    <div class="attachCastSection">
        <h1>Attach New Cast</h1>
        <div class="attach-form">
            <h2>{{movieData.title}}</h2>
            <img class="movie" src="{{movieData.imageURL}}">
            <form action="" method="post" {{#if error}}class="error"{{/if}}>
                <label for="cast">Cast</label>
                <select id="cast" name="cast">
                    <option value="none" selected>________</option>
                    {{#each data}}
                    <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
                <div id="center-btn">
                    <button id="create-btn">Add Cast</button>
                </div>
            </form>
        </div>
    </div>
</section>